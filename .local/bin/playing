#!/bin/bash
status=$(playerctl -p mpd status 2>/dev/null)
if [ "$status" = "Playing" ]; then
    echo " $(playerctl -p mpd metadata --format '{{artist}} - {{title}}')"
elif [ "$status" = "Paused" ]; then
    echo " $(playerctl -p mpd metadata --format '{{artist}} - {{title}}')"
else
    echo ""
fi

