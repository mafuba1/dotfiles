[Unit]
Description=Keyboard layout watcher for dwmblocks
After=dwmblocks.service
PartOf=dwmblocks.service
OnFailure=set-layout.service

[Service]
ExecStart=%h/.local/bin/keyboard-watcher.sh
Restart=on-failure
RestartSec=1
Environment=DISPLAY=:0
Environment=XAUTHORITY=%h/.Xauthority

[Install]
WantedBy=dwmblocks.service

